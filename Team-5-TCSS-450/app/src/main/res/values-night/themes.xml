<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NightMode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_blue_main</item>
        <item name="colorPrimaryVariant">@color/night_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="themeIcon">@drawable/logo_dark_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_yellow_main</item>
        <item name="colorSecondaryVariant">@color/night_yellow_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_blue_main</item>
        <item name="colorPrimaryVariant">@color/night_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_yellow_main</item>
        <item name="colorSecondaryVariant">@color/night_yellow_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>